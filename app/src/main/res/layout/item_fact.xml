<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/ll_fact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_if_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14sp"
                    />
                <TextView
                    android:id="@+id/tv_if_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/txt_14sp"
                    />
                <ImageView
                    android:id="@+id/iv_green_check"
                    android:layout_width="@dimen/dimen_32dp"
                    android:layout_height="@dimen/dimen_32dp"
                    android:background="@drawable/green_check"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_if_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_if_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_18sp"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@+id/iv_if_alarm"/>
                    <ImageView
                        android:id="@+id/iv_if_alarm"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/alarm_off"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp">

                    <TextView
                        android:id="@+id/tv_if_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EUR"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_14sp"
                        android:layout_toLeftOf="@+id/iv_if_flag"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/iv_if_flag"
                        android:layout_width="32dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/eur"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp">
            <RelativeLayout
                android:id="@+id/rl_if_impact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="15%"
                android:background="@drawable/bg_green"
                >
                <TextView
                    android:id="@+id/tv_if_impact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="high"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_12sp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_actual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="12%"
                android:text="Act: "
                android:textColor="@color/grey"
                android:textSize="@dimen/txt_16sp"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rl_if_impact"
                />
            <TextView
                android:id="@+id/tv_if_actual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="16%"
                android:text="0.5%"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_16sp"
                android:layout_toRightOf="@+id/tv_actual"
                android:layout_centerVertical="true"
                />


            <TextView
                android:id="@+id/tv_forcast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="12%"
                android:text="For: "
                android:textColor="@color/grey"
                android:textSize="@dimen/txt_16sp"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_if_actual"
                />
            <TextView
                android:id="@+id/tv_if_forcast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="16%"
                android:text="0.6%"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_forcast"
                />
            <TextView
                android:id="@+id/tv_previous"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="12%"
                android:text="Prev: "
                android:textColor="@color/grey"
                android:textSize="@dimen/txt_16sp"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_if_forcast"
                />
            <TextView
                android:id="@+id/tv_if_previous"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="17%"
                android:text="0.7%"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_previous"
                />

        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>
</LinearLayout>
